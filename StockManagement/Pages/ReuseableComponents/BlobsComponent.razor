@inherits BlobsComponentBase
@if (_uris != null && _uris.Count != 0)
{
    <div class="row">
        @foreach (string uri in _uris)
        {
            <div class="col-4 col-md-3 col-lg-2">
                <div>
                    <img class="img-fluid" src="@uri" />
                </div>
                <button @onclick="@(() => Delete(uri))" class="btn btn-sm btn-danger float-right"><i class="oi oi-trash"></i></button>
            </div>
        }
    </div>
}