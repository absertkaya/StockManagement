@inherits ProductListBase

@page "/productlijst/{id:int}"
@using StockManagement.Domain
@using Blazored.Typeahead

<a href="/overzicht" class="btn btn-outline-info"><i class="oi oi-arrow-thick-left"></i></a>
<h3 class="d-inline">@_category</h3>
<BlazoredTypeahead SearchMethod="SearchProduct" @bind-Value="_selectedProduct">
    <SelectedTemplate>@context.Description</SelectedTemplate>
    <ResultTemplate>@context.Description</ResultTemplate>
</BlazoredTypeahead>
<button class="btn btn-primary" @onclick="NavigateToProductDetail">Zoek</button>

<table id="productList" class="table table-striped table-responsive">
    <thead class="thead-dark">
        <tr>
            <th class="d-none d-md-table-cell">Id</th>
            <th>Productnaam</th>
            <th class="d-none d-md-table-cell">Productnummer</th>
            <th>#</th>
            <th></th>
        </tr>
    </thead>

    @if (_products != null)
    {
        @foreach (Product prod in _products)
        {
            <tr id="product@(prod.Id)">
                <td class="d-none d-md-table-cell">@prod.Id</td>
                <td>@prod.Description</td>
                <td class="d-none d-md-table-cell">@prod.ProductNumber</td>
                <td>@prod.AmountInStock</td>
                <td><button class="btn btn-primary" @onclick="@(() => GetItems(prod.Id))"><i class="oi oi-magnifying-glass"></i></button></td>
            </tr>
        }
    }

</table>

