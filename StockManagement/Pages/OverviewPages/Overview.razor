@inherits OverviewBase

@page "/"
@page "/overzicht"

@using StockManagement.Domain

<h3>Overzicht</h3>

<div class="row">
    <div class="col-sm-2 col-md-1">
        <button @onclick="GetUsers" class="btn btn-info btn-outline"><i class="oi oi-person"></i></button>
    </div>
    <div class="col-sm-10 col-md-11">
        @if (_categories != null)
        {
            <div class="list-group">
                @foreach (var cat in _categories)
                {
                    <button @onclick="(() => GetProductList(cat.Id))" class="list-group-item list-group-item-action">
                        @cat.CategoryName
                    </button>
                }
            </div>

        }
    </div>
</div>
@if  (_dBError)
{
    <p class="text-danger">Fout bij het inladen van de data. Herlaad de pagina.</p>
}

